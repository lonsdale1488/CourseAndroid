<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/SingInLeyoutBack"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@color/SingInLeyoutBack"
    android:layout_margin="30dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:src="@drawable/ic_menu_camera"/>
    <TextView
        android:id="@+id/nicknamepostnumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="User"
        android:textSize="18dp"
        android:gravity="left"
        android:textColor="@color/SingInLeyoutFront"/>
</LinearLayout>
    <TextView
         android:id="@+id/postTitlenumber"
         android:layout_width="match_parent"
         android:layout_height="120dp"
         android:gravity="left"
         android:layout_margin="15dp"
         android:textColor="@color/TextColorPost"
         android:layout_weight="1"
         android:textStyle="bold"
         android:textSize="18sp"/>
    <TextView
         android:id="@+id/postBodynumber"
         android:layout_width="match_parent"
         android:layout_height="150dp"
         android:gravity="left"
         android:layout_margin="15dp"
         android:textColor="@color/TextColorPost"
         android:layout_weight="1"
         android:textStyle="italic"
         android:textSize="15sp"
    />
    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comentListInPost"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/BackFonColorPost"
        android:layout_margin="15dp">
    </ListView>
</LinearLayout>
